@model IEnumerable<MVCDemo.Models.RY>
 @using MVCDemo.Models;          
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int current = ViewBag.Current;    //当前页
    int count = ViewBag.Count;        //总页数
}
<script>
    function fun() {
        var name = $("#name").val();
        location.href = "/Agent/Search?name=" + name;
    }
</script>

<div class="form-group">
    <table>
        <tr>
            <td>
               输入姓名或支公司： <input type="text" id="name" />
                <input type="button" id="btn_search" value="查询" onclick="fun()" />
            </td>
            <td width="200" align="right">
                @Html.ActionLink("添加人员", "Add")
            </td>
            <td width="400" align="right">
                @Html.ActionLink("转到职场管理页面", "Index", "Company")
            </td>
        </tr>
    </table>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.seq)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.area)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.c_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.c_person)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sys)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.seq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_person)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sys)
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.seq }) 
                @Html.ActionLink("删除", "Delete", new { id = item.seq })
            </td>
        </tr>
    }
</table>
@Html.Pager(1, current, count, 10)

